@model IEnumerable<BookLibrary.Models.Entity.Book>

@{
    ViewData["Title"] = "Get all Books";
}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-8">
            <a class="btn btn-dark" href="/Book/Add">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h3>Books</h3>
            
            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>ISBN</th>
                        <th>Totalpages</th>
                       @*  <th>Image Url</th> *@
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.ISBN</td>
                            <td>@item.TotalPages</td>
                            @* <td>@item.ImageUrl</td> *@
                            <td>
                                <a class="btn btn-success" href ="/Book/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href ="/Book/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>


</div>