@model IEnumerable<BookLibrary.Models.Entity.Genre>

@{
    ViewData["Title"] = "Get all Genre";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Genres</h3>
            
            <table class="table table-striped table-bordered table-dark">
                <thread>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thread>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" href ="/Genre/Edit?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href ="/Genre/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>


</div>